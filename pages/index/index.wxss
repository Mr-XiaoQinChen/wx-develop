/* 轮播图 */
page {
  background-color: #F0F0F0;
}
.box {
  height: 320rpx;
}
image {
  width: 750rpx;
  height: 320rpx;
  display: block;
}

.item {
  /* height: 500rpx; */
  margin-bottom: 20rpx;
}
.title {
  font-size: 28rpx;
  line-height: 1;
  margin-top: 20rpx;
  margin-left: 30rpx;
  margin-bottom: 20rpx;
}
.infos {
  height: 180rpx;
  background-color: #fff;
  box-sizing: border-box;
  padding: 16rpx 124rpx 72rpx 30rpx;
  position: relative;
}

.name {
  color: #3c3c3c;
  font-size: 30rpx;
}
.price {
  color: #FE6249;
  font-size: 32rpx;
  position: absolute;
  top: 16rpx;
  right: 30rpx;
}
.details {
  color: #B4B4B4;
  font-size: 22rpx;
  position: absolute;
  bottom:22rpx;
}
.details text {
  margin-right: 30rpx;
}